<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestDFS">

    <TextView
            android:id="@+id/message"
            android:layout_width="322dp"
            android:layout_height="97dp"
            android:layout_marginLeft="28dp"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="356dp"/>
    <Button
            android:id="@+id/bouton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_seconde"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <Button
            android:text="Date getter"
            android:layout_width="148dp"
            android:layout_height="51dp"
            android:id="@+id/buttondateactivity"
            app:layout_constraintTop_toBottomOf="@+id/bouton1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginTop="32dp"/>
    <Button
            android:text="Broadcast"
            android:layout_width="146dp"
            android:layout_height="53dp"
            android:id="@+id/boutonmainbroadcast" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/buttondateactivity"/>
    <Button
            android:text="Recup contacts"
            android:layout_width="148dp"
            android:layout_height="47dp"
            android:id="@+id/boutoncontact" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/boutonmainbroadcast"/>
    <Button
            android:text="TestIntent1"
            android:layout_width="116dp"
            android:layout_height="52dp"
            android:id="@+id/testintent1" app:layout_constraintStart_toEndOf="@+id/bouton1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.573"/>
    <Button
            android:text="TestIntentData"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:id="@+id/testintentdata" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/buttondateactivity"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.623" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/testintent1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textintent1" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/testintent1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/testintentdata" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttondateactivity" android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"/>

</android.support.constraint.ConstraintLayout>